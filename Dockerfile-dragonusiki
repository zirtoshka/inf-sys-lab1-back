FROM maven:3.9.9-amazoncorretto-21-alpine AS build
WORKDIR /build
COPY . .
RUN mvn clean package -DskipTests

FROM amazoncorretto:21-alpine-jdk
WORKDIR /app
COPY --from=build /build/target/dragonieze-0.0.1-SNAPSHOT.jar /app/dragonieze-0.0.1-SNAPSHOT.jar
EXPOSE 8081
CMD ["java", "-jar", "/app/dragonieze-0.0.1-SNAPSHOT.jar"]